{{ form_start(form) }}
<div class="form">
	<div class="form-group">
		{{ form_widget(form.nom ,{ 'attr': {'class':'form-control input-text','placeholder':'Nom','data-rule':'minlen:4'}}) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.email ,{ 'attr': {'class':'form-control input-text','placeholder':'email'}}) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.objet ,{ 'attr': {'class':'form-control input-text','placeholder':'Objet'}}) }}
	</div>
	<div class="form-group">
		 {{ form_widget(form.message ,{ 'attr': {'class':'form-control input-text','placeholder':'Message','row':'15' }}) }}
	</div>
	<div class="text-center">
		 <button class="btn btn-success">{{ button_label|default('Envoyer') }}</button>
	</div>
</div>
    
    
    
   
   
{{ form_end(form) }}
