{% extends 'base0.html.twig' %}

{% block title %}News
{% endblock %}

{% block body %}
	<main
		id="main" class="main-page">

		<!--==========================
										      Speaker Details Section
										    ============================-->
		<section id="speakers-details" class="wow fadeIn">
			<div class="container">
				<div class="section-header">
					<h2>{{ news.title }}</h2>

				</div>

				<div class="row">
					<div class="col-md-6">
						<img src=" {{ asset('img/formation/') }}{{news.img}}  " alt="Speaker 1" class="img-fluid">
					</div>

					<div class="col-md-6">
						<div class="details">
							<h2>{{ news.title }}</h2>
							<div class="social">

								<a href="">
									<i class="fa fa-facebook"></i>
								</a>

								<a href="">
									<i class="fa fa-linkedin"></i>
								</a>
							</div>
							<p>{{ news.content }}.</p>
						</div>
					</div>

				</div>
			</div>

		</section>

	</main>


{% endblock %}
