{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}

<div class="container">
        
        <section class="main-section contact" id="contact">

            <div class="row">
                <div class="col-lg-6 col-sm-7 wow fadeInLeft">
                 <img src="{{ asset('/img/formation/') }}{{ formation.image }} " alt="{{ asset('public/img/formation/') }}{{ formation.image }}" style="height:300px ; width:450px ;">
                      
                </div>  

              
                <div class="col-lg-6 col-sm-5 wow fadeInUp delay-05s">
                
                    <table class="table table-striped">
                        <tbody>
                           {#  <tr>
                                <th>Id</th>
                                <td>{{ formation.id }}</td>
                            </tr> #}
                            <tr>
                                <th>Theme</th>
                                <td>{{ formation.theme }}</td>
                            </tr>
                            <tr>
                                <th>Soustheme</th>
                                <td>{{ formation.soustheme }}</td>
                            </tr>
                            <tr>
                                <th>Duree</th>
                                <td>{{ formation.duree }}</td>
                            </tr>
                            <tr>
                                <th>Action</th>
                                <td><a href="{{ path('inscrit_new', {'id': formation.id}) }}"> <button class="btn btn-warning" >S'incrire à la formation</button> </a></td>
                            </tr>
