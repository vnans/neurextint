{% extends 'base.html.twig' %}

{% block title %}Biographie index{% endblock %}

{% block body %}
    <h1>Biographie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomprenoms</th>
                <th>Fonction</th>
                <th>Annneedexperience</th>
                <th>Grade</th>
                <th>Operations</th>
                  <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for biographie in biographies %}
            <tr>
                <td>{{ biographie.id }}</td>
                <td>{{ biographie.nomprenoms }}</td>
                <td>{{ biographie.fonction }}</td>
                <td>{{ biographie.annneedexperience }}</td>
                <td>{{ biographie.grade }}</td>
                <td>{{ biographie.operations }}</td>
                <td>{{ biographie.image }}</td>
                <td>
                    <a href="{{ path('biographie_show', {'id': biographie.id}) }}">show</a>
                    <a href="{{ path('biographie_edit', {'id': biographie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('biographie_new') }}">Create new</a>
{% endblock %}
